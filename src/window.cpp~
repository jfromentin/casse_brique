#include "window.hpp"

void init_window(Window* win, int width, int height, string title) {
  if (SDL_Init(SDL_INIT_VIDEO) < 0) {
    cerr << "Could not initialize sdl2, error " << SDL_GetError() << endl;
    exit(-1);
  }
  win -> width = width;
  win -> height = height;
  win -> sdl_window = SDL_CreateWindow(title, SDL_WINDOWPOS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, width, height, SDL_WINDOW_SHOWN);
  win -> sdl_surface = SDL_GetWindowSurface(win -> sdl_window);
}
